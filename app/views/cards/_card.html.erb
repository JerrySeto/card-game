<div class='card'>
  <div class='title-bar section'>
    <span> <%=card.name%></span>
  </div>
  <div>
    <div class='info-bar section'>
      <div class='mana-symbol'><%= card.cost.gsub(/[^\d]/, '')%></div>
      <%- card.cost.gsub(/\d/, '').split('').each do |mana_symbol|%>
        <div class='mana-symbol'><%= mana_symbol%></div>
      <%- end%>
      <div class='power-toughness'>
        <div class='mana-symbol'><%=card.power%></div>
        <div class='mana-symbol'><%=card.toughness%></div>
      </div>
    </div>
    <div class='main section'>
      <div class='picture section'>
      </div>
      <div class='card-type'>
        <%=card.card_type%>
      </div>
      <div class='rules-text section'>
        <div>
          <%=card.rules_text%>
        </div>
      </div>
      <div class='extra section'>
        <div class='mana-symbol'><%=card.rarity%></div>
      </div>
    </div>
  </div>
</div>