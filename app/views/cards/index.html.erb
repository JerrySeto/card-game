<h1>Listing cards</h1>

<table>
  <thead>
    <tr>
      <th>Card type</th>
      <th>Cost</th>
      <th>Rules text</th>
      <th>Power</th>
      <th>Toughness</th>
      <th>Rarity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.card_type %></td>
        <td><%= card.cost %></td>
        <td><%= card.rules_text %></td>
        <td><%= card.power %></td>
        <td><%= card.toughness %></td>
        <td><%= card.rarity %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
